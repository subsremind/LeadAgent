{
	"name": "LeadAgent",
	"private": true,
	"scripts": {
		"build": "dotenv -c -- turbo build",
		"dev": "dotenv -c -- turbo dev --concurrency 15",
		"dev:full": "dotenv -c -- concurrently \"pnpm dev\" \"pnpm tasks\"",
		"start": "dotenv -c -- turbo start",
		"lint": "biome lint .",
		"clean": "turbo clean",
		"format": "biome format . --write",
		"tasks": "dotenv -c -- pnpm -F @repo/api tasks",
		"tasks:prod": "dotenv -c -- pnpm -F @repo/api tasks:prod"
	},
	"engines": {
		"node": ">=20"
	},
	"packageManager": "pnpm@10.17.0",
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@repo/tsconfig": "workspace:*",
		"@types/node": "^22.13.5",
		"concurrently": "^8.2.2",
		"dotenv-cli": "^8.0.0",
		"turbo": "^2.4.3",
		"typescript": "5.7.3"
	},
	"pnpm": {
		"overrides": {
			"@types/react": "19.0.0",
			"@types/react-dom": "19.0.0"
		}
	},
	"dependencies": {
		"@clerk/nextjs": "^6.31.10"
	}
}
